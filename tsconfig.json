{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dist",
        "removeComments": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
        },
    "include": ["src/**/*.ts", "index.ts", "webpack.config.ts"],
    "exclude": ["node_modules", "dist"]
}
